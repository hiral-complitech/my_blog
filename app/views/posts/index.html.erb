<% if notice.present? %>
<div class="alert alert-success alert-styled-left alert-arrow-left alert-dismissible">
	<button type="button" class="close" data-dismiss="alert"><span>&times;</span></button>
	<span class="font-weight-semibold"><%= notice %></span>
</div>
<% end %>
<div class="card">
	<div class="table-responsive">
		<table class="table table-striped">
			<thead>
				<tr>
					<th> Title </th>
					<th> Create Date & Time </th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				<% @posts.each do |post| %>
				<tr>
					<td><%= post.title %></td>
					<td><%= post.created_at.strftime("%v %r") %></td>
					<td>              
						<div class="btn-group">
							<button type="button" class="btn btn-primary" data-toggle="dropdown"><i class="icon-three-bars  icon-1x"></i></button>
							<div class="dropdown-menu dropdown-menu-right">
								<%= link_to user_post_path(@user.id, post.id), class: "dropdown-item" do %>
								<i class="icon-eye2 mr-1 icon-1x"></i> Show
								<% end %>
								<%= link_to edit_user_post_path(@user.id, post.id), class: "dropdown-item" do %>
								<i class="icon-pencil mr-1 icon-1x"></i> Edit
								<% end %>
								<%= link_to user_post_path(@user.id, post.id), method: :delete, data: { confirm: 'Are you sure?' }, class: "dropdown-item" do %>
								<i class="icon-x mr-1 icon-1x"></i> Destroy
								<% end %>	
							</div>
						</div>
					</td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
	<!-- <%= link_to "Back", users_path, class: "btn btn-primary" %> -->
</div>